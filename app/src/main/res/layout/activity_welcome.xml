<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_toLeftOf="@+id/fasterr"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launch_logo_vector" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fasterr"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="FasterR"
            android:textSize="40sp"
            android:textColor="#152247"
            android:fontFamily="@font/cera_pro_bold"/>
    </RelativeLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="center"
            android:id="@+id/headerImageView"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintWidth_max="500dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/welcome_header_animation"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Summaries"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/cera_pro_bold"
            android:textColor="#00000f"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Get the key ideas\nfrom books in 15 minutes"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:fontFamily="@font/cera_pro_regular"
            android:textColor="#00000f"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_welcome_shows"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="FasterR Specials"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/cera_pro_bold"
                    android:textColor="#00000f"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Audio by authors\nand thinkers"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/cera_pro_regular"
                    android:textColor="#00000f"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_welcome_audiobooks"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Audiobooks"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/cera_pro_bold"
                    android:textColor="#00000f"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Discounts on\nfunn-length audio\ntitles"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/cera_pro_regular"
                    android:textColor="#00000f"
                    />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button android:id="@+id/signUpButton"
            android:layout_gravity="center_horizontal|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_started"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintWidth_max="500dp"
            android:minHeight="56dp"
            android:fontFamily="@font/cera_pro_bold"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2ce080"/>
        <Button android:id="@+id/logInButton"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal|center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/login"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="#2ce080"
            android:padding="8dp"
            android:minHeight="56dp"
            android:textAllCaps="false"
            android:fontFamily="@font/cera_pro_bold"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>
</ScrollView>
