<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:contentInsetStart="0dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Details"
            android:textColor="#152247"
            android:fontFamily="@font/cera_pro_bold"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            />


    </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/cera_pro_bold"
        android:text="Email"
        android:layout_centerHorizontal="true"
        android:textColor="#152247"
        android:textSize="20sp"
        android:layout_below="@+id/audiobook_cover"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_border"
        android:textColorHighlight="@color/fastergreen"
        android:paddingLeft="5dp"
        android:fontFamily="@font/cera_pro_regular"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:text="anshulkkhemani@gmail.com"
            android:textColor="#152247"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:background="@null"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/cera_pro_bold"
        android:text="Name"
        android:layout_centerHorizontal="true"
        android:textColor="#152247"
        android:textSize="20sp"
        android:layout_below="@+id/audiobook_cover"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_border"
        android:textColorHighlight="@color/fastergreen"
        android:paddingLeft="5dp"
        android:fontFamily="@font/cera_pro_regular"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:text="Anshul Khemani"
            android:textColor="#152247"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:background="@null"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/dob_container">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/cera_pro_bold"
        android:text="Date of birth"
        android:layout_centerHorizontal="true"
        android:textColor="#152247"
        android:textSize="20sp"
        android:layout_below="@+id/audiobook_cover"/>


    <EditText
        android:id="@+id/profile_dob"
        android:fontFamily="@font/cera_pro_regular"
        android:clickable="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:text="20/11/1997"
        android:editable="false"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/address_container">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/cera_pro_bold"
        android:text="Address"
        android:layout_centerHorizontal="true"
        android:textColor="#152247"
        android:textSize="20sp"
        android:layout_below="@+id/audiobook_cover"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_border"
        android:textColorHighlight="@color/fastergreen"
        android:paddingLeft="5dp"
        android:fontFamily="@font/cera_pro_regular"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_address"
            android:layout_width="match_parent"
            android:text=""
            android:textColor="#152247"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:background="@null"
            />
    </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <Button
        android:id="@+id/save_details"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Save"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:background="@color/fastergreen"
        android:fontFamily="@font/cera_pro_bold"
        android:textAllCaps="false"/>

</LinearLayout>