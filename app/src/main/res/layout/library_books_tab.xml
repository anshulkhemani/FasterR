<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_bold"
            android:id="@+id/uid"
            android:text="1"
            android:textColor="@color/blackish"
            android:textSize="20sp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_bold"
            android:id="@+id/lib_book_no"
            android:text="1"
            android:textColor="@color/blackish"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" . "
            android:textSize="20sp"
            android:fontFamily="@font/cera_pro_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_bold"
            android:id="@+id/lib_book_name"
            android:text="Book Name"
            android:layout_marginLeft="6dp"
            android:textColor="@color/blackish"
            android:textSize="20sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/lib_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/cera_pro_regular"
        android:text="Author"
        android:textColor="@color/blackish"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/lib_book_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/cera_pro_regular"
        android:text="This is book description which can be of maximum 2 lines"
        android:textColor="@color/blackish"
        android:maxLines="2"
        android:textSize="17sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:layout_marginLeft="15dp"
        />

</LinearLayout>