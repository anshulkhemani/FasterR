<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_bold"
            android:layout_marginLeft="18dp"
            android:id="@+id/review_name"
            android:text="Person Name"
            android:textColor="@color/blackish"
            android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ratings">
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_width="130dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/rating_bar"
            android:layout_marginTop="10dp"
            android:progress="90"
            android:layout_height="35dp"
            android:isIndicator="true"
            android:padding="5dp"
            style="@style/Widget.MaterialRatingBar.RatingBar" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/ratings_date"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_thin"
            android:text="28/12/2020"
            android:textColor="@color/blackish"
            android:textSize="20sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/review_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/cera_pro_regular"
        android:text="This is review description which can be of any number of lines"
        android:textColor="@color/blackish"
        android:maxLines="2"
        android:textSize="17sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:layout_marginLeft="15dp"
        />

</LinearLayout>